doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Diagnóstico Médico
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    style.
      body {
        background-color: #f0f4f8;
      }
      .left-panel, .right-panel {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      }

  body
    include navbar.pug
    +navbar

    .container.mt-5
      h2.text-center.mb-5 Diagnóstico Médico

      .row
        .col-md-4
          .left-panel
            h4 Información Del Paciente
            p
              strong ID: 
              | #{paciente.idPaciente}
            p
              strong Nombre: 
              | #{paciente.nombre}
            p
              strong Apellido: 
              | #{paciente.apellido}
            p
              strong DNI: 
              | #{paciente.dni}
            hr
            .d-grid.gap-2
              a.btn.btn-outline-primary(href=`/FormularioPaciente?dni=${paciente.dni}`) Editar Información
              a.btn.btn-outline-success(href=`/NuevoTurno/${paciente.dni}`) Asignar Nuevo Turno

        .col-md-8
          .right-panel
            form(action=`/medicos/guardarDiagnostico/${paciente.dni}` method="POST")
              .mb-3
                label.form-label(for="diagnostico") Diagnóstico
                textarea.form-control(name="diagnostico" id="diagnostico" rows="5" placeholder="Escriba aquí el diagnóstico del paciente") #{diagnostico || ''}
              .mb-3
                label.form-label(for="estudios") Solicitar Estudios
                select.form-select(name="estudios[]" id="estudios" multiple)
                  each estudio in estudios
                    option(value=estudio.idEstudio)= estudio.nombre
              button.btn.btn-primary(type="submit") Guardar Diagnóstico

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
