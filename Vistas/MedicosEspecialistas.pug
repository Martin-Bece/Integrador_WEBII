doctype html
include navbar.pug
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Informe de Estudio
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    style.
      body {
        background-color: #f0f4f8;
      }
      .card {
        border-radius: 1rem;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
      }
      textarea {
        resize: vertical;
      }

  body
    +navbar

    div.container.mt-5
      h2.text-center.mb-4.text-primary Realizacion de Estudio - #{paciente.nombre} #{paciente.apellido}

      div.card.p-4.shadow-lg
        form(action=`/medico/especialista/estudio/${paciente.idPaciente}` method='POST')
          div.mb-3
            label.form-label(for='resultado') Informe MÃ©dico
            textarea#informe.form-control(name='resultado' rows='6' required placeholder='Describa los resultados del estudio')

          input(type="hidden" name="id_paciente" value=paciente.idPaciente);
          input(type="hidden" name="id_estudio" value=estudio.idEstudio);

          button.btn.btn-success.w-100.mt-3(type='submit') ðŸ“¤ Enviar Informe

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
