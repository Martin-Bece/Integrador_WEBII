doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title Nueva Admisión
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body.bg-primary.bg-gradient.d-flex.justify-content-center.align-items-center(style="min-height: 100vh;")
    .card.shadow-lg.rounded.p-4(style="max-width: 450px; width: 100%;")
      h2.card-title.text-center.mb-4.text-primary Nueva Admisión
      form(action="/admisiones/crear" method="POST")
        .mb-3
          label.form-label(for="motivo") Motivo de Internación
          select.form-select(name="motivo" id="motivo" required)
            option(value="" disabled selected) -- Seleccione un motivo --
            each motivo in motivos
              option(value=motivo.id)= motivo.nombre
        .mb-3
          label.form-label(for="origen") Origen de Internación
          select.form-select(name="origen" id="origen" required)
            option(value="" disabled selected) -- Seleccione un origen --
            each origen in origenes
              option(value=origen.id)= origen.nombre
        button.btn.btn-primary.w-100(type="submit") Guardar Admisión
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")

