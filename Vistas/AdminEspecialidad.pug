doctype html
include navbar.pug
html(lang="es")
  head
    meta(charset="UTF-8")
    title Especialidades
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css")
  body
    +navbar
    .container.mt-5
      h2.text-center.mb-4 Especialidades

      a.btn.btn-primary.mb-3(href="/admin/especialidades/nuevo")
        i.bi.bi-plus-circle-fill.me-1
        | Nueva Especialidad

      if especialidades.length > 0
        table.table.table-hover.shadow-sm
          thead.table-light
            tr
              th ID
              th Nombre
              th Acciones
          tbody
            each esp in especialidades
              tr
                td= esp.idEspecialidad
                td= esp.nombre
                td
                  a.btn.btn-sm.btn-warning.me-2(href=`/admin/especialidades/editar/${esp.idEspecialidad}`)
                    i.bi.bi-pencil-fill
                  if esp.activo
                    a.btn.btn-sm.btn-danger(href=`/admin/especialidades/baja/${esp.idEspecialidad}`)
                      i.bi.bi-hand-thumbs-down-fill
                  else
                    a.btn.btn-sm.btn-success(href=`/admin/especialidades/alta/${esp.idEspecialidad}`)
                      i.bi.bi-hand-thumbs-up-fill
      else
        p.text-muted.text-center No hay especialidades cargadas.
