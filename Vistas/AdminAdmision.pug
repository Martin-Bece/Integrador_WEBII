doctype html
include navbar.pug
html(lang="es")
  head
    meta(charset="UTF-8")
    title Empleados de Admisión
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css")
  body
    +navbar
    .container.mt-5
      h2.text-center.mb-4 Empleados de Admisión

      a.btn.btn-primary.mb-3(href="/admin/empleados/nuevo")
        i.bi.bi-person-plus-fill.me-1
        | Nuevo Empleado

      if empleados.length > 0
        table.table.table-hover.shadow-sm
          thead.table-light
            tr
              th ID
              th Nombre
              th Usuario
              th DNI
              th Turno
              th Acciones
          tbody
            each emp in empleados
              tr
                td= emp.idEmpleado
                td= emp.nombre
                td= emp.usuario
                td= emp.dni
                td= emp.turno
                td
                  a.btn.btn-sm.btn-warning.me-2(href=`/admin/empleados/editar/${emp.idEmpleado}`)
                    i.bi.bi-pencil-fill
                  if emp.activo
                    a.btn.btn-sm.btn-danger(href=`/admin/empleados/baja/${emp.idEmpleado}`)
                      i.bi.bi-hand-thumbs-down-fill
                  else
                    a.btn.btn-sm.btn-success(href=`/admin/empleados/alta/${emp.idEmpleado}`)
                      i.bi.bi-hand-thumbs-up-fill
      else
        p.text-muted.text-center No hay empleados cargados.
