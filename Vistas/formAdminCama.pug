doctype html
include navbar.pug
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= cama ? 'Editar Cama' : 'Nueva Cama'
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css")
    style.
      body {
        background-color: #f0f4f8;
      }
      .form-container {
        max-width: 500px;
        margin: 50px auto;
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
      }

  body
    +navbar

    div.form-container
      h2.text-center.mb-4= cama ? 'Editar Cama' : 'Nueva Cama'

      form(method="post" action=cama ? `/admin/camas/editar/${cama.idCama}` : '/admin/camas/nuevo')
        
        div.mb-3
          label.form-label(for="habitacion_id") Habitación
          select.form-select(name="habitacion_id" id="habitacion_id" required=true)
            option(value="" disabled selected=!(cama)) Seleccione una habitación
            each habitacion in habitaciones
              option(value=habitacion.idHabitacion selected=cama && cama.habitacion_id===habitacion.idHabitacion)= habitacion.numero

        div.mb-3
          label.form-label(for="estado") Estado
          input.form-control(type="text", name="estado", id="estado", required=true, value=cama ? cama.estado : 'libre')

        div.text-center.mt-4
          button.btn.btn-primary(type="submit")= cama ? 'Guardar Cambios' : 'Crear Cama'
          a.btn.btn-secondary.ms-2(href="/admin/camas") Cancelar

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
