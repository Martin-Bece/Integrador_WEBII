doctype html
include navbar.pug
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css")
    title Plan de Cuidados
    style.
      body {
        background: linear-gradient(135deg, #74ebd5 0%, #ACB6E5 100%);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }
      main.container {
        flex-grow: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        padding-top: 2rem;
        padding-bottom: 2rem;
      }
      .card {
        border-radius: 1rem;
        box-shadow: 0 0 20px rgba(0,0,0,0.15);
        max-width: 600px;
        width: 100%;
      }
      .form-label {
        font-weight: 600;
      }
      textarea.form-control {
        font-size: 0.95rem;
      }
      .btn-group-custom {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
      }

  body
    +navbar

    main.container
      div.card.p-4.shadow-lg
        div.card-body
          h4.card-title.mb-4.text-center.text-primary Plan de Cuidados

          if error
            div.alert.alert-danger.mt-2= error

          form(action=`/enfermeria/PlanCuidados/${dni}` method="POST" novalidate autocomplete="off")
            input(type="hidden" name="id_enfermero" value=enfermero.idEnfermero)
            input(type="hidden" name="id_paciente" value=paciente.idPaciente)

            div.mb-3
              label.form-label(for="intervenciones_inmediatas") Intervenciones Inmediatas
              textarea.form-control(name="intervenciones_inmediatas" id="intervenciones_inmediatas" rows="3" required)= planCuidados ? planCuidados.intervenciones_inmediatas : ''

            div.mb-3
              label.form-label(for="medicamentos") Medicamentos
              textarea.form-control(name="medicamentos" id="medicamentos" rows="2")= planCuidados ? planCuidados.medicamentos : ''

            div.mb-3
              label.form-label(for="tratamiento") Tratamiento
              textarea.form-control(name="tratamiento" id="tratamiento" rows="3")= planCuidados ? planCuidados.tratamiento : ''

            div.btn-group-custom.mt-4
              button.btn.btn-secondary.flex-fill(type="submit" formaction=`/enfermeria/guardarPlan/${dni}`) Guardar y Volver a Inicio
              button.btn.btn-primary.flex-fill(type="submit" formaction=`/enfermeria/guardarPlanConInforme/${paciente.dni}`) Guardar e Informar a MÃ©dico (Solo enfermeros)

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js")
