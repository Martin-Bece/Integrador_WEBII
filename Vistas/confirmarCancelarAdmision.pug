//- Vistas/ConfirmarCancelarAdmisionDNI.pug
doctype html
include navbar.pug
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Confirmar Cancelación de Admisión
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css")
    style.
      body {
        background-color: #f0f4f8;
      }
      .confirm-container {
        max-width: 500px;
        margin: 100px auto;
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        text-align: center;
      }

  body
    +navbar

    div.confirm-container
      h3.mb-4 ¿Está seguro que desea cancelar la admisión de #{admision.idAdmision}

      form(method="post", action=`/cancelarAdmision/${admision.paciente.dni}`)
        button.btn.btn-danger.me-2(type="submit") Confirmar Cancelación
        a.btn.btn-secondary(href="/admin/admisiones") Cancelar

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
