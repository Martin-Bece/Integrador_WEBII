doctype html
include navbar.pug
html(lang="es")
  head
    meta(charset="UTF-8")
    title Camas
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css")
  body
    +navbar
    .container.mt-5
      h2.text-center.mb-4 Camas

      .d-flex.justify-content-between.align-items-center.mb-3
        a.btn.btn-primary(href="/admin/camas/nuevo")
          i.bi.bi-plus-circle-fill.me-1
          | Nueva Cama

        form(method="get" action="/admin/camas" class="d-flex")
          label.form-label.me-2(for="estado") Filtrar por estado:
          select.form-select(name="estado" onchange="this.form.submit()")
            option(value="Todas" selected=estadoSeleccionado=='Todas') Todas
            option(value="Libre" selected=estadoSeleccionado=='Libre') Libres
            option(value="Ocupada" selected=estadoSeleccionado=='Ocupada') Ocupadas

      if camas.length > 0
        table.table.table-hover.shadow-sm
          thead.table-light
            tr
              th ID
              th Estado
              th Habitaci√≥n
              th Acciones
          tbody
            each cama in camas
              tr
                td= cama.idCama
                td.text-capitalize= cama.estado
                td= cama.habitacion.numero
                td
                  a.btn.btn-sm.btn-warning.me-2(href=`/admin/camas/editar/${cama.idCama}`)
                    i.bi.bi-pencil-fill
                  if cama.activo
                    a.btn.btn-sm.btn-danger(href=`/admin/camas/baja/${cama.idCama}`)
                      i.bi.bi-hand-thumbs-down-fill
                  else
                    a.btn.btn-sm.btn-success(href=`/admin/camas/alta/${cama.idCama}`)
                      i.bi.bi-hand-thumbs-up-fill
      else
        p.text-muted.text-center No hay camas cargadas.
