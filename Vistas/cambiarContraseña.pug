doctype html
include navbar.pug
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Cambiar Contraseña
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css")
    style.
      body {
        background-color: #f0f4f8;
      }
      .form-container {
        max-width: 500px;
        margin: 50px auto;
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
      }
      .error-msg {
        display: none;
        color: #dc3545;
        margin-top: 10px;
      }
      .text-success {
        display: none;
        color: #28a745;
        margin-top: 10px;
      }

  body
    +navbar

    div.form-container
      h2.text-center.mb-4 Cambiar Contraseña

      // Mensaje de error
      if error
        span.error-msg(style="display:block")= error
      else
        span.error-msg

      // Mensaje de éxito
      if exito
        span.text-success(style="display:block")= exito
      else
        span.text-success

      form(method="post" action=`/admin/usuarios/cambiar-contrasea/${usuario.idUsuario}`)
        div.mb-3
          label.form-label(for="contraseaActual") Contraseña Actual
          input.form-control(type="password", name="contraseaActual", id="contraseaActual", required=true, placeholder="Ingresa tu contraseña actual")
        
        div.mb-3
          label.form-label(for="contraseaNueva") Nueva Contraseña
          input.form-control(type="password", name="contraseaNueva", id="contraseaNueva", required=true, placeholder="Ingresa la nueva contraseña")
        
        div.mb-3
          label.form-label(for="confirmarContrasea") Confirmar Nueva Contraseña
          input.form-control(type="password", name="confirmarContrasea", id="confirmarContrasea", required=true, placeholder="Repite la nueva contraseña")
        
        div.text-center.mt-4
          button.btn.btn-primary(type="submit") Cambiar Contraseña
          a.btn.btn-secondary.ms-2(href="/admin/usuarios") Atrás

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
