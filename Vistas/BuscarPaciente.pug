doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Buscar Paciente
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" crossorigin="anonymous")
    style.
      body {
        background: linear-gradient(135deg, #74ebd5 0%, #ACB6E5 100%);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }
      .card {
        border-radius: 1rem;
        box-shadow: 0 0 20px rgba(0,0,0,0.15);
        max-width: 400px;
        width: 100%;
      }
      h4.card-title {
        font-weight: 700;
        letter-spacing: 1px;
      }
      button.btn-success {
        font-weight: 600;
      }
  body
    div.container.min-vh-100.d-flex.justify-content-center.align-items-center
      div.card.shadow.p-4
        div.card-body
          h4.card-title.mb-4.text-center.text-primary Buscar Paciente

          form(action="/BuscarPaciente" method="POST")
            div.mb-3
              label.form-label(for="dni") DNI
              input#dni.form-control(type="number" name="dni" required placeholder="Ingrese DNI")

            button.btn.btn-primary.w-100(type="submit") Buscar

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous")

