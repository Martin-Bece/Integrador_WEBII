doctype html
include navbar.pug
html(lang="es")
  head
    meta(charset="UTF-8")
    title Lista de Enfermeros
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css")
  body
    +navbar
    .container.mt-5
      h2.text-center.mb-4 Lista de Enfermeros

      a.btn.btn-primary.mb-3(href="/admin/enfermeros/nuevo")
        i.bi.bi-person-plus-fill.me-1
        | Nuevo Enfermero

      if enfermeros.length > 0
        table.table.table-hover.shadow-sm
          thead.table-light
            tr
              th ID
              th Nombre
              th Apellido
              th DNI
              th Matricula
              th Acciones
          tbody
            each enf in enfermeros
              tr
                td= enf.idEnfermero
                td= enf.nombre
                td= enf.apellido
                td= enf.dni
                td= enf.matricula 
                td
                  a.btn.btn-sm.btn-warning.me-2(href=`/admin/enfermeros/editar/${enf.idEnfermero}`)
                    i.bi.bi-pencil-fill
                  if enf.activo
                    a.btn.btn-sm.btn-danger(href=`/admin/enfermeros/baja/${enf.idEnfermero}`)
                      i.bi.bi-hand-thumbs-down-fill
                  else
                    a.btn.btn-sm.btn-success(href=`/admin/enfermeros/alta/${enf.idEnfermero}`)
                      i.bi.bi-hand-thumbs-up-fill
      else
        p.text-muted.text-center No hay enfermeros cargados.
