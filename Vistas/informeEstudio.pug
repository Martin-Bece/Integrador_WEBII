doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Informe de Estudio
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    include navbar.pug
    +navbar

    .container.mt-5
      h2 Informe de Estudio
      .card
        .card-body
          h5.card-title Paciente: #{paciente.nombre} #{paciente.apellido}
          p.card-text DNI: #{paciente.dni}
          p.card-text Contenido del Informe:
          textarea.form-control(readonly rows="8") #{informe.resultado}
          a.btn.btn-secondary.mt-3(href=`/medicos/informes/${paciente.dni}`) Volver Atr√°s
