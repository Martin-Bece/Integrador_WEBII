doctype html
include navbarE.pug
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css")
    title Evaluación Física
    style.
      body {
        background: linear-gradient(135deg, #74ebd5 0%, #ACB6E5 100%);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      main.container {
        flex-grow: 1;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .card {
        border-radius: 1rem;
        box-shadow: 0 0 20px rgba(0,0,0,0.15);
        max-width: 600px;
        width: 100%;
      }

  body
    +navbar

    main.container
      div.card.p-4.shadow-lg
        div.card-body
          h4.card-title.mb-4.text-center.text-primary Evaluación Física - Signos Vitales

          if error
            div.alert.alert-danger.mt-2= error

          form(action=`/enfermeria/evaluacion-fisica/${dni}` method="POST")
            input(type="hidden" name="id_paciente" value=paciente.idPaciente)

            div.mb-3
              label.form-label(for="presion_arterial") Presión Arterial
              input.form-control(type="text" name="presion_arterial" required)

            div.mb-3
              label.form-label(for="frecuencia_respiratoria") Frecuencia Respiratoria (rpm)
              input.form-control(type="number" name="frecuencia_respiratoria" required)

            div.mb-3
              label.form-label(for="temperatura_corporal") Temperatura Corporal (°C)
              input.form-control(type="number" name="temperatura_corporal" required step="0.1")

            div.mb-3
              label.form-label(for="color_piel") Color de la piel
              input.form-control(type="text" name="color_piel" required)

            div.mb-3
              label.form-label(for="observaciones") Observaciones
              textarea.form-control(name="observaciones" rows="3")

            button.btn.btn-primary.w-100.mt-3(type="submit") Guardar Evaluación Física
