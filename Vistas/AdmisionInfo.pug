doctype html
include navbar.pug
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title Admisión Confirmada - Hospital Central Sur
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" crossorigin="anonymous")
    style.
      body {
        background-color: #e6e6e6;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      main.container {
        flex-grow: 1;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .card {
        border-radius: 1rem;
        box-shadow: 0 0 20px rgba(0, 128, 0, 0.5);
        border: 2px solid #008000;
      }
      h4.card-title {
        font-weight: 700;
        color: #006600;
        text-align: center;
      }
      .info-label {
        font-weight: bold;
        color: #004d00;
      }

  body
    +navbar
    main.container
      div.card.p-4.shadow-lg(style="width: 100%; max-width: 500px;")
        div.card-body
          h4.card-title.mb-4 ¡Admisión Exitosa!
          p
            span.info-label DNI del paciente: 
            | #{dni}
          p
            span.info-label Unidad asignada: 
            | #{unidad}
          p
            span.info-label Ala: 
            | #{ala}
          p
            span.info-label Habitación: 
            | #{habitacion}
          p
            span.info-label Cama: 
            | #{cama}
          a.btn.btn-success.mt-4.w-100(href="/Admision") Volver al inicio

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous")
