doctype html
include navbar.pug 
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css", integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT", crossorigin="anonymous")
    title Cargar Paciente 
    style.
      body {
        background: linear-gradient(135deg, #74ebd5 0%, #ACB6E5 100%);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      main.container {
        flex-grow: 1;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .card {
        border-radius: 1rem;
        box-shadow: 0 0 20px rgba(0,0,0,0.15);
      }
      h4.card-title {
        font-weight: 700;
        letter-spacing: 1px;
      }

  body
    +navbar
    br
    main.container
      div.card.p-4.shadow-lg(style="width: 100%; max-width: 420px;")
        div.card-body
          h4.card-title.mb-4.text-center.text-primary Formulario del Paciente

          form(action='' method='POST' novalidate)
            div.mb-3
              label.form-label(for='nombre') Nombre
              input#nombre.form-control(type='text' name='nombre' required placeholder='Ingrese el nombre')

            div.mb-3
              label.form-label(for='apellido') Apellido 
              input#apellido.form-control(type='text' name='apellido' required placeholder='Ingrese el apellido')

            div.mb-3
              label.form-label(for='dni') DNI
              input#dni.form-control(type='number' name='dni' required placeholder='Ingrese el DNI')
            
            div.mb-3 
              label.form-label(for='fechaNacimiento') Fecha de Nacimiento
              input#fechaNacimiento.form-control(type='date' name='fechaNacimiento' required)

            div.mb-3
              label.form-label(for='sexo') Sexo
              select#sexo.form-select(name='sexo' required)
                option(value='') Seleccione una opción
                option(value='M') Masculino
                option(value='F') Femenino
                option(value='O') Otro

            div.mb-3
              label.form-label(for='telefono') Teléfono
              input#telefono.form-control(type='tel' name='telefono' required placeholder='Ingrese teléfono')

            div.mb-3
              label.form-label(for='direccion') Dirección
              input#direccion.form-control(type='text' name='direccion' required placeholder='Ingrese dirección')

            div.mb-3
              label.form-label(for='mutual') Nombre de la obra social o mutual
              select#mutual.form-select(name='mutual' required)
                option(value="") Seleccione una opción 

            button.btn.btn-primary.w-100.mt-3(type='submit') Cargar Paciente

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js", integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO", crossorigin="anonymous")

