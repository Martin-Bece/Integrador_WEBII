doctype html
include navbar.pug 
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css", integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT", crossorigin="anonymous")
        title Cargar Paciente 
    body 
        +navbar
    block content 

    
    div.container.min-vh-100.d-flex.justify-content-center.align-items-center
        div.card.shadow.p-4(style="width: 100%; max-width: 400px;")
            div.card-body
                h4.card-title.mb-4.text-center.text-success Formulario para Nuevo Paciente

                form(Action='' method='POST')
                    div.mb-3
                        label.form-label(for='nombre') Nombre
                        input#nombre.form-control(type='text' name='nombre' required placeholder='Ej: Juancito')

                    div.mb-3
                        label.form-label(for='apellido') Apellido 
                        input#apellido.form-control(type='text' name='apellido' required placeholder='Ej: Perezcito')

                    div.mb-3
                        label.form-label(for="dni") DNI
                        input#dni.form-control(type="number" name='dni' required placeholder='Ej: 11223344')
                    
                    div.mb-3 
                        label.form-label(for='fechaNacimiento') Fecha de Nacimiento
                        input#fechaNacimiento.form-control(type='date' name='fechaNacimiento' required)

                    div.mb-3
                        label.form-label(for='sexo') Sexo
                        select#sexo.form-select(name='sexo' required)
                            option(value='') Seleccione una opción
                            option(value='Masculino') Masculino
                            option(value='Femenino') Femenino

                    div.mb-3
                        label.form-label(for='motivo') Motivo de Admisión
                        textarea#motivo.form-control(name='motivo' rows='3' required placeholder='Ej: Apendicitis')

                    div.mb-3
                        label.form-label(for='telefono') Teléfono
                        input#telefono.form-control(type='tel' name='telefono' required placeholder='Ej: 2666123123')

                    div.mb-3
                        label.form-label(for='direccion') Dirección
                        input#direccion.form-control(type='text' name='direccion' required placeholder='Ej: Rivadavia 100')

                    div.mb-3
                        label.form-label(for='contactoEmergencia') Contacto de Emergencia
                        input#contactoEmergencia.form-control(type='text' name='contactoEmergencia' required placeholder='Teléfono de emergencia')

                    div.mb-3
                        label.form-label(for='origen') Origen de la Admisión
                        select#origen.form-select(name='origen' required)
                            option(value='') Seleccione una opción
                            option(value='Guardia') Guardia
                            option(value='Derivación') Derivación

                    button.btn.btn-success.w-100(type='submit') Cargar Paciente
                    
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js", integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO", crossorigin="anonymous")