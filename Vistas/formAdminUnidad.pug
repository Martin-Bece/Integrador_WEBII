doctype html
include navbar.pug
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= unidad ? 'Editar Unidad' : 'Nueva Unidad'
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css")
    style.
      body {
        background-color: #f0f4f8;
      }
      .form-container {
        max-width: 500px;
        margin: 50px auto;
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
      }
      .error-message {
        color: red;
        margin-bottom: 15px;
      }

  body
    +navbar

    div.form-container
      h2.text-center.mb-4= unidad ? 'Editar Unidad' : 'Nueva Unidad'

      if error
        span.error-message= error

      form(method="post" action=unidad ? `/admin/unidades/editar/${unidad.idUnidad}` : '/admin/unidades/nuevo')
        div.mb-3
          label.form-label(for="nombre") Nombre
          input.form-control(type="text", name="nombre", id="nombre", required=true, value=unidad ? unidad.nombre : '')

        div.text-center.mt-4
          button.btn.btn-primary(type="submit")= unidad ? 'Guardar Cambios' : 'Crear Unidad'
          a.btn.btn-secondary.ms-2(href="/admin/unidades") Cancelar

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
