doctype html
include navbarE.pug
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css")
    title Buscar Paciente por DNI
    style.
      body {
        background: linear-gradient(135deg, #74ebd5 0%, #ACB6E5 100%);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      main.container {
        flex-grow: 1;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .card {
        border-radius: 1rem;
        box-shadow: 0 0 20px rgba(0,0,0,0.15);
      }

  body
    +navbar

    main.container
      div.card.p-4.shadow-lg(style="width: 100%; max-width: 400px;")
        div.card-body
          h4.card-title.mb-4.text-center.text-primary Buscar Paciente

          if error
            div.alert.alert-danger.mt-2= error

          form(action="/enfermeria/PlanC" method="POST" novalidate)
            div.mb-3
              label.form-label(for="dni") Ingrese el DNI del paciente
              input#dni.form-control(type="number" name="dni" required placeholder="DNI del paciente")

            button.btn.btn-info.w-100.mt-3(type="submit") Buscar
