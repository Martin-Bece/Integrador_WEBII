doctype html
include navbar.pug
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css")
    title Informe Enfermero
    style.
      body {
        background: linear-gradient(135deg, #74ebd5 0%, #ACB6E5 100%);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      main.container {
        flex-grow: 1;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .card {
        border-radius: 1rem;
        box-shadow: 0 0 20px rgba(0,0,0,0.15);
        max-width: 600px;
        width: 100%;
      }

  body
    +navbar

    main.container
      div.card.p-4.shadow-lg
        div.card-body
          h4.card-title.mb-4.text-center.text-primary Informe del Paciente

          if error
            div.alert.alert-danger.mt-2= error

          form(action="/enfermeria/enviarInforme" method="POST" novalidate)
            input(type="hidden" name="id_enfermero" value=enfermero.idEnfermero)

            input(type="hidden" name="dni" value=paciente.dni)

            div.mb-3
              label.form-label(for="informe") Informe
              textarea.form-control(name="informe" id="informe" rows="6" required placeholder="Escriba aqu√≠ el informe...")

            button.btn.btn-primary.w-100.mt-3(type="submit") Enviar Informe
