doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title Gestión de Entidades - Hospital Central Sur
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css")
    style.
      body {
        background: linear-gradient(135deg, #f0f9ff, #ffffff);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }
      .card {
        border-radius: 1rem;
        box-shadow: 0 8px 20px rgba(0, 123, 255, 0.15);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        cursor: pointer;
      }
      .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 30px rgba(0, 123, 255, 0.3);
      }
      h2 {
        font-weight: 700;
        letter-spacing: 1px;
      }

  body
    include navbar.pug
    +navbar

    div.container.mt-5
      h2.text-center.mb-4.text-dark Gestión de Entidades Principales
      div.row.row-cols-1.row-cols-md-3.justify-content-center.g-4

        div.col
          a(href="/admin/pacientes")
            div.card.p-3.shadow.text-center
              i.bi.bi-person-fill.display-3.text-primary.mb-3
              h5.card-title Pacientes

        div.col
          a(href="/admin/medicos")
            div.card.p-3.shadow.text-center
              i.bi.bi-person-badge-fill.display-3.text-success.mb-3
              h5.card-title Médicos

        div.col
          a(href="/admin/empleados-admision")
            div.card.p-3.shadow.text-center
              i.bi.bi-person-lines-fill.display-3.text-warning.mb-3
              h5.card-title Empleados Adm.

        div.col
          a(href="/admin/especialidades")
            div.card.p-3.shadow.text-center
              i.bi.bi-heart-pulse-fill.display-3.text-danger.mb-3
              h5.card-title Especialidades

        div.col
          a(href="/admin/enfermeros")
            div.card.p-3.shadow.text-center
              i.bi.bi-person-hearts.display-3.text-info.mb-3
              h5.card-title Enfermeros

        div.col
          a(href="/admin/camas")
            div.card.p-3.shadow.text-center
              i.bi.bi-hospital-fill.display-3.text-secondary.mb-3
              h5.card-title Camas

        div.col
          a(href="/admin/habitaciones")
            div.card.p-3.shadow.text-center
              i.bi.bi-door-closed-fill.display-3.text-dark.mb-3
              h5.card-title Habitaciones

        div.col
          a(href="/admin/unidades")
            div.card.p-3.shadow.text-center
              i.bi.bi-building.display-3.text-primary.mb-3
              h5.card-title Unidades

        div.col
          a(href="/admin/admisiones")
            div.card.p-3.shadow.text-center
              i.bi.bi-clipboard2-fill.display-3.text-success.mb-3
              h5.card-title Admisiones

        div.col
          a(href="/admin/mutuales")
            div.card.p-3.shadow.text-center
              i.bi.bi-people-fill.display-3.text-warning.mb-3
              h5.card-title Mutuales

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous")
