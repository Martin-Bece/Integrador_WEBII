doctype html
include navbar.pug
html(lang="es")
  head
    meta(charset="UTF-8")
    title Unidades
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css")
  body
    +navbar
    .container.mt-5
      h2.text-center.mb-4 Unidades

      a.btn.btn-primary.mb-3(href="/admin/unidades/nuevo")
        i.bi.bi-plus-circle-fill.me-1
        | Nueva Unidad

      if unidades.length > 0
        table.table.table-hover.shadow-sm
          thead.table-light
            tr
              th ID
              th Nombre
              th Acciones
          tbody
            each unidad in unidades
              tr
                td= unidad.idUnidad
                td= unidad.nombre
                td
                  a.btn.btn-sm.btn-warning.me-2(href=`/admin/unidades/editar/${unidad.idUnidad}`)
                    i.bi.bi-pencil-fill
                  if unidad.activo
                    a.btn.btn-sm.btn-danger(href=`/admin/unidades/baja/${unidad.idUnidad}`)
                      i.bi.bi-hand-thumbs-down-fill
                  else
                    a.btn.btn-sm.btn-success(href=`/admin/unidades/alta/${unidad.idUnidad}`)
                      i.bi.bi-hand-thumbs-up-fill
      else
        p.text-muted.text-center No hay unidades cargadas.
