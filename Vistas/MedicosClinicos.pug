doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Portal Médico Clínico
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css")
    style.
      body {
        background-color: #f0f4f8;
      }
      .left-panel, .right-panel {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      }
      .card-panel {
        border-radius: 10px;
        padding: 20px;
        color: white;
        transition: all 0.3s ease;
        text-decoration: none;
        text-align: center;
      }
      .card-panel i {
        margin-bottom: 10px;
      }
      .card-panel.diagnostico { background-color: #0d6efd; }
      .card-panel.historia { background-color: #198754; }
      .card-panel.plan { background-color: #ffc107; color: black; }
      .card-panel.alta { background-color: #dc3545; }
      .card-panel.informes { background-color: #6f42c1; }
      .card-panel:hover {
        filter: brightness(85%);
        text-decoration: none;
        color: white !important;
        box-shadow: 0 4px 20px rgba(0,0,0,0.2);
      }

  body
    include navbar.pug
    +navbar

    .container.mt-5
      h2.text-center Portal Médico Clínico
      p.text-center.text-muted Seleccione una acción para realizar sobre el paciente.

      .row
        .col-md-4
          .left-panel
            h4 Información del Paciente
            p
              strong ID:
              | #{paciente.idPaciente}
            p
              strong Nombre:
              | #{paciente.nombre}
            p
              strong Apellido:
              | #{paciente.apellido}
            p
              strong DNI:
              | #{paciente.dni}

        .col-md-8
          .right-panel
            .row.mt-4
              .col-md-6.mb-4
                a.card-panel.diagnostico.d-block(href=`/medicos/diagnostico/${dniPaciente}`)
                  i.fas.fa-notes-medical.fa-2x
                  h5 Diagnóstico Médico

              .col-md-6.mb-4
                a.card-panel.historia.d-block(href=`/medicos/historia-clinica/${dniPaciente}`)
                  i.fas.fa-book-medical.fa-2x
                  h5 Historia Clínica

              .col-md-6.mb-4
                a.card-panel.plan.d-block(href=`/medicos/plan-cuidados/${dniPaciente}`)
                  i.fas.fa-edit.fa-2x
                  h5 Editar Plan de Cuidados

              .col-md-6.mb-4
                a.card-panel.informes.d-block(href=`/medicos/informes/${dniPaciente}`)
                  i.fas.fa-file-alt.fa-2x
                  h5 Ver Informes

              .col-md-6.mb-4
                a.card-panel.alta.d-block(href=`/medicos/alta-paciente/${dniPaciente}`)
                  i.fas.fa-sign-out-alt.fa-2x
                  h5 Dar de Alta al Paciente

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
