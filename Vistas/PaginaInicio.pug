doctype html 
include navbar.pug
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title Panel Principal - Hospital Central Sur
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css")
    style.
      body {
        background: linear-gradient(135deg, #e0f7fa, #ffffff);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }
      .card {
        border-radius: 1rem;
        box-shadow: 0 8px 20px rgba(0, 123, 255, 0.15);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
      }
      .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 30px rgba(0, 123, 255, 0.3);
      }
      h2 {
        font-weight: 700;
        letter-spacing: 1px;
      }

  body
    +navbar 
    block content 

    div.container.mt-5
      h2.text-center.mb-4.text-primary Hospital Central Sur - HIS
      div.row.row-cols-1.row-cols-md-2.row-cols-lg-4.g-4

        div.col
          div.card.p-3.shadow
            h5.card-header.bg-primary.text-white Admisión y Recepción
            div.card-body
              h5.card-title Registro
              p.card-text Registro o actualización de datos del paciente.
              a.btn.btn-outline-primary.mb-2(href="/BuscarPaciente") Buscar Paciente
              a.btn.btn-outline-danger(href="/Emergencia") Emergencia

        div.col
          div.card.p-3.shadow
            h5.card-header.bg-info.text-white Evaluación Médica
            div.card-body
              h5.card-title Médicos
              p.card-text Evolución Médica y turnos.
              a.btn.btn-info.disabled.mb-2(href="") Nueva Evaluación

        div.col
          div.card.p-3.shadow
            h5.card-header.bg-info.text-white Evaluación de Enfermería
            div.card-body
              h5.card-title Enfermería
              p.card-text Registro de signos vitales y controles.
              a.btn.btn-info.disabled.mb-2(href="") Buscar Historial Médico
              a.btn.btn-info.disabled.mb-2(href="") Registrar Signos Vitales
              a.btn.btn-info.disabled(href="") Realizar Plan de Cuidados

        div.col
          div.card.p-3.shadow
            h5.card-header.bg-primary.text-white Altas e Internación
            div.card-body
              h5.card-title Gestión de Internación
              p.card-text Asignación de habitación y alta del paciente.
              a.btn.btn-outline-primary.mb-2(href="/PacientesInternados") Ver Internaciones
              a.btn.btn-info.disabled(href="") Ver Altas

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous")



