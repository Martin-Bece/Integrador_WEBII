doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title Resumen Administrativo - Hospital
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css")
    style.
      body {
        background: linear-gradient(135deg, #f0f9ff, #ffffff);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }
      .card {
        border-radius: 1rem;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
      }
      .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 30px rgba(0,0,0,0.2);
      }

  body
    include navbar.pug
    +navbar

    div.container.mt-5
      h2.text-center.mb-4.text-dark Resumen Administrativo
      div.row.row-cols-1.row-cols-md-3.g-4

        div.col
          div.card.p-3.shadow.text-center
            h5.card-header.bg-primary.text-white Pacientes
            div.card-body
              h2= totalPacientes
              p.card-text Total de pacientes registrados

        div.col
          div.card.p-3.shadow.text-center
            h5.card-header.bg-success.text-white Turnos
            div.card-body
              h2= totalTurnos || 0
              p.card-text Turnos pendientes

        div.col
          div.card.p-3.shadow.text-center
            h5.card-header.bg-warning.text-dark Informes
            div.card-body
              h2= totalInformes
              p.card-text Informes generados

        div.col
          div.card.p-3.shadow.text-center
            h5.card-header.bg-danger.text-white Camas Ocupadas
            div.card-body
              h2= camasOcupadas
              p.card-text Camas actualmente ocupadas

        div.col
          div.card.p-3.shadow.text-center
            h5.card-header.bg-info.text-white Médicos
            div.card-body
              h2= totalMedicos
              p.card-text Médicos registrados

        div.col
          div.card.p-3.shadow.text-center
            h5.card-header.bg-secondary.text-white Enfermeros
            div.card-body
              h2= totalEnfermeros
              p.card-text Enfermeros registrados
        
        div.col
          div.card.p-3.shadow.text-center
            h5.card-header.bg-primary.text-white Admision
            div.card-body
              h2= totalAdmision
              p.card-text Empleados de Admision registrados

        div.col
          div.card.p-3.shadow.text-center
            h5.card-header.bg-success.text-white Altas
            div.card-body
              h2= altas || 0
              p.card-text Total de altas

        div.col
          div.card.p-3.shadow.text-center
            h5.card-header.bg-warning.text-white Admisiones Activas
            div.card-body
              h2= activas || 0
              p.card-text Total de admisiones activas

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous")
