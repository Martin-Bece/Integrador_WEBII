doctype html
include navbar.pug
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title Internaciones - Hospital Central Sur
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" crossorigin="anonymous")
    style.
      body {
        background: linear-gradient(135deg, #e3f2fd, #bbdefb);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      main.container {
        flex-grow: 1;
      }
      h2 {
        font-weight: 700;
        color: #0d6efd;
      }
      table {
        box-shadow: 0 0 15px rgba(13, 110, 253, 0.2);
        border-radius: 0.5rem;
        overflow: hidden;
      }
      thead {
        background: #0d6efd;
        color: white;
      }
      tbody tr:hover {
        background-color: #cfe2ff;
        cursor: pointer;
      }
      .btn-primary {
        transition: background-color 0.3s ease;
      }
      .btn-primary:hover {
        background-color: #0b5ed7;
      }
      .btn-danger[disabled] {
        opacity: 0.6;
        cursor: not-allowed;
      }
  body
    +navbar
    main.container.mt-5
      h2.mb-4.text-center Pacientes Internados

      table.table.table-striped.table-hover
        thead
          tr
            th DNI
            th Nombre
            th Apellido
            th Habitaci√≥n
            th Acciones
        tbody
          each admision in internados
            tr
              td= admision.paciente.dni
              td= admision.paciente.nombre
              td= admision.paciente.apellido
              td= admision.habitacion.numero
              td
                a.btn.btn-sm.btn-primary.me-2(href=`/portalPaciente/${admision.paciente.dni}`) Ver / Editar
                button.btn.btn-sm.btn-danger(disabled) Dar de alta

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous")
